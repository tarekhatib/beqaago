<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Your Cart | BeqaaGo</title>
  <link rel="stylesheet" href="/styles/dashboard.css">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
</head>
<body>
  <%- include("partials/header") %>

  <main class="cart-page">
    <h1>Your Cart</h1>
    <div id="cart-items"></div>
    <p id="cart-empty" class="empty-cart">Your cart is empty.</p>

    <div class="cart-summary" id="cart-summary" style="display:none;">
      <p class="cart-restaurant" id="cart-restaurant"></p>

      <p><strong>Items:</strong> $<span id="cart-items-subtotal">0.00</span></p>
      <p>
        <strong>Delivery:</strong>
        <span id="cart-delivery">Calculating...</span>
      </p>
      <hr>
      <p><strong>Total:</strong> $<span id="cart-total">0.00</span></p>

      <button id="checkout-btn">Place Order</button>
    </div>
  </main>

  <!-- Toast -->
  <div id="toast" class="toast hidden"></div>

  <%- include("partials/footer") %>

<script>
  const cartList         = document.getElementById("cart-items");
  const emptyMsg         = document.getElementById("cart-empty");
  const summaryBox       = document.getElementById("cart-summary");
  const totalSpan        = document.getElementById("cart-total");
  const itemsSubtotalEl  = document.getElementById("cart-items-subtotal");
  const deliverySpan     = document.getElementById("cart-delivery");
  const restaurantLabel  = document.getElementById("cart-restaurant");
  const toastEl          = document.getElementById("toast");

  let cart = JSON.parse(localStorage.getItem("cart") || "[]");
  let user = JSON.parse(localStorage.getItem("user") || "{}");
  let userOrderCount = 0;   // how many orders this user has already made

  document.addEventListener("DOMContentLoaded", async () => {
    // Load how many orders this user already has (for free delivery rule)
    if (user && user.id) {
      userOrderCount = await getUserOrderCount(user.id);
    }
    renderCart();
    updateHeaderCartCount();
  });

  /* ========================
        HELPERS
  ======================== */

  function saveCart() {
    localStorage.setItem("cart", JSON.stringify(cart));
    updateHeaderCartCount();
  }

  function updateHeaderCartCount() {
    const badge = document.getElementById("cart-count");
    if (!badge) return;
    const totalQty = cart.reduce((sum, i) => sum + (i.qty || 0), 0);
    badge.textContent = totalQty;
  }

  function showToast(msg) {
    toastEl.textContent = msg;
    toastEl.classList.remove("hidden");
    toastEl.classList.add("show");
    setTimeout(() => {
      toastEl.classList.remove("show");
      toastEl.classList.add("hidden");
    }, 2000);
  }

  async function getUserOrderCount(userId) {
    try {
    const res = await fetch(`/api/orders/${userId}`);

      if (!res.ok) return 0;
      const orders = await res.json();
      if (!Array.isArray(orders)) return 0;
      return orders.length;
    } catch (err) {
      console.error("Failed to fetch user orders count:", err);
      return 0;
    }
  }

  /* ========================
        RENDER CART
  ======================== */

  function renderCart() {
    if (!cart.length) {
      cartList.innerHTML = "";
      emptyMsg.style.display = "block";
      summaryBox.style.display = "none";
      itemsSubtotalEl.textContent = "0.00";
      deliverySpan.textContent = "$0.00";
      totalSpan.textContent = "0.00";
      return;
    }

    emptyMsg.style.display = "none";
    summaryBox.style.display = "block";

    const shopName = cart[0].shopName || "This shop";
    restaurantLabel.textContent = "From: " + shopName;

    let itemsTotal = 0;

    cartList.innerHTML = cart
      .map((item, idx) => {
        const price = Number(item.price) || 0;
        const qty   = item.qty || 1;
        const lineTotal = price * qty;
        itemsTotal += lineTotal;

        return `
          <div class="cart-item" data-index="${idx}">
            <img
              src="${item.image || "/images/no-image.png"}"
              alt="${item.name}"
              class="cart-item-img"
              onerror="this.src='/images/no-image.png'"
            />
            <div class="cart-item-main">
              <h3>${item.name}</h3>
              <p class="cart-price">$${price.toFixed(2)}</p>
            </div>
            <div class="cart-qty-controls">
              <button class="qty-btn minus">-</button>
              <span class="qty">${qty}</span>
              <button class="qty-btn plus">+</button>
            </div>
            <div class="cart-line-total">$${lineTotal.toFixed(2)}</div>
            <button class="remove-btn">&times;</button>
          </div>
        `;
      })
      .join("");

    // ✅ Delivery rule: first 3 orders for this user → FREE delivery
    const isDeliveryFree = userOrderCount < 3;
    const deliveryFeeRaw = Number(cart[0].delivery_fee || 0);
    const deliveryFee    = isDeliveryFree ? 0 : deliveryFeeRaw;

    itemsSubtotalEl.textContent = itemsTotal.toFixed(2);

    if (isDeliveryFree) {
      deliverySpan.textContent = "Free (first 3 orders)";
    } else {
      deliverySpan.textContent = "$" + deliveryFee.toFixed(2);
    }

    const grandTotal = itemsTotal + deliveryFee;
    totalSpan.textContent = grandTotal.toFixed(2);

    saveCart();
  }

  /* ========================
       CART EVENTS
  ======================== */

  // + / - / remove
  cartList.addEventListener("click", (e) => {
    const itemEl = e.target.closest(".cart-item");
    if (!itemEl) return;
    const idx = Number(itemEl.getAttribute("data-index"));
    if (Number.isNaN(idx)) return;

    if (e.target.classList.contains("plus")) {
      cart[idx].qty = (cart[idx].qty || 1) + 1;
      renderCart();
    } else if (e.target.classList.contains("minus")) {
      const current = cart[idx].qty || 1;
      if (current > 1) {
        cart[idx].qty = current - 1;
      } else {
        cart.splice(idx, 1);
      }
      renderCart();
    } else if (e.target.classList.contains("remove-btn")) {
      cart.splice(idx, 1);
      renderCart();
    }
  });

  /* ========================
          CHECKOUT
  ======================== */

  async function checkout() {
    cart = JSON.parse(localStorage.getItem("cart") || "[]");
    user = JSON.parse(localStorage.getItem("user") || "{}");

    if (!user.id) {
      showToast("Please log in first.");
      return;
    }

    if (!cart.length) {
      showToast("Cart is empty.");
      return;
    }

    // Recompute items total
    const itemsTotal = cart.reduce(
      (sum, i) => sum + (Number(i.price) || 0) * (i.qty || 0),
      0
    );

    // Make sure we have updated count (in case user placed orders in other tab)
    const freshCount = await getUserOrderCount(user.id);
    userOrderCount = freshCount;

    const isDeliveryFree = userOrderCount < 3;
    const deliveryFeeRaw = Number(cart[0].delivery_fee || 0);
    const deliveryFee    = isDeliveryFree ? 0 : deliveryFeeRaw;

    const finalTotal = itemsTotal + deliveryFee;
    const shopId     = cart[0].shop_id;

    try {
      const res = await fetch("/api/orders", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({
          user_id: user.id,
          shop_id: shopId,
          total: finalTotal,
          status: "Pending",
          items: cart.map(item => ({
            item_id: item.id,
            quantity: item.qty,
            price: item.price      // unit price
          }))
        })
      });

      const data = await res.json();
      if (res.ok) {
        localStorage.removeItem("cart");
        cart = [];
        renderCart();
        showToast("Order placed!");

        setTimeout(() => {
          window.location.href = "/orders";
        }, 800);
      } else {
        showToast(data.message || "Order failed.");
      }
    } catch (err) {
      console.error(err);
      showToast("Server error.");
    }
  }

  document.getElementById("checkout-btn").addEventListener("click", checkout);
</script>

<style>
  .cart-page {
    padding-bottom: 80px;
  }

  .cart-item {
    display: flex;
    align-items: center;
    gap: 12px;
    background: #fff;
    padding: 12px;
    border-radius: 12px;
    box-shadow: 0 2px 6px rgba(0,0,0,0.06);
    margin-bottom: 10px;
  }

  .cart-item-img {
    width: 60px;
    height: 60px;
    border-radius: 10px;
    object-fit: cover;
  }

  .cart-item-main {
    flex: 1;
  }

  .cart-item-main h3 {
    margin: 0;
    font-size: 16px;
  }

  .cart-price {
    margin: 4px 0 0;
    font-size: 14px;
    color: #00b050;
  }

  .cart-qty-controls {
    display: flex;
    align-items: center;
    gap: 6px;
  }

  .qty-btn {
    border: none;
    background: #f0f0f0;
    border-radius: 50%;
    width: 26px;
    height: 26px;
    cursor: pointer;
    font-weight: 600;
  }

  .cart-line-total {
    width: 70px;
    text-align: right;
    font-weight: 600;
  }

  .remove-btn {
    border: none;
    background: transparent;
    font-size: 20px;
    color: #999;
    cursor: pointer;
  }

  .cart-summary {
    background: #fff;
    padding: 16px;
    margin-top: 20px;
    border-radius: 12px;
    box-shadow: 0 2px 6px rgba(0,0,0,0.06);
  }

  .cart-restaurant {
    margin-top: 0;
    margin-bottom: 8px;
    color: #666;
  }

  #checkout-btn {
    margin-top: 10px;
    width: 100%;
    border: none;
    background: #00b050;
    color: #fff;
    padding: 10px 0;
    border-radius: 10px;
    font-size: 15px;
    cursor: pointer;
  }

  .empty-cart {
    color: #777;
  }

  .toast {
    position: fixed;
    left: 50%;
    transform: translateX(-50%);
    bottom: 100px;
    background: #333;
    color: #fff;
    padding: 10px 16px;
    border-radius: 999px;
    font-size: 14px;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.2s ease-out, transform 0.2s ease-out;
    z-index: 60;
  }
  .toast.show {
    opacity: 1;
    transform: translateX(-50%) translateY(-5px);
  }
  .toast.hidden {
    display: none;
  }
</style>

</body>
</html>
