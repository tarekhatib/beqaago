<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>BeqaaGo | Register</title>
  <link rel="stylesheet" href="/styles/register.css" />
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet" />
</head>
<body>

  <div class="register-container">
    <div class="register-card">
      <div class="logo">
        <img src="/images/logo.svg" alt="BeqaaGo Logo" />
      </div>
      <p class="welcome">Create your account ✨</p>

      <!-- ROLE CHOICE -->
      <div class="role-toggle">
        <label>
          <input type="radio" name="role" value="user" checked>
          <span>User</span>
        </label>
        <label>
          <input type="radio" name="role" value="vendor">
          <span>Vendor</span>
        </label>
      </div>

      <form class="register-form" onsubmit="return false;" novalidate>
        <input type="text" placeholder="Full Name" required />
        <input type="email" placeholder="Email" required />
        <input type="password" placeholder="Password" required />
        <input type="password" placeholder="Confirm Password" required />
        <button type="submit" class="btn-register">Register</button>
      </form>
      <p id="register-msg" class="status-msg"></p>

      <p class="login-text">
        Already have an account?
        <a href="/login" id="toLogin">Login here</a>
      </p>
    </div>
  </div>

  <script>
    document.getElementById("toLogin").addEventListener("click", e => {
      e.preventDefault();
      document.body.classList.add("fade-out");
      setTimeout(() => {
        window.location.href = "/login";
      }, 600);
    });
  </script>
<script>
document.querySelector(".register-form").addEventListener("submit", async (e) => {
  e.preventDefault();

  const msg = document.getElementById("register-msg");
  msg.textContent = "";
  msg.className = "status-msg";

  // Reset error states
  document.querySelectorAll(".error-message").forEach(m => m.remove());
  document.querySelectorAll("input").forEach(i => i.classList.remove("input-error"));

  const name = e.target[0].value.trim();
  const email = e.target[1].value.trim();
  const password = e.target[2].value;
  const confirm = e.target[3].value;
  const role = document.querySelector("input[name='role']:checked").value;

  let valid = true;

  const showError = (input, text) => {
    input.classList.add("input-error");
    const err = document.createElement("div");
    err.classList.add("error-message");
    err.textContent = text;
    input.insertAdjacentElement("afterend", err);
    valid = false;
  };

  // Validation
  if (!name) showError(e.target[0], "Full name is required");

  const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
  if (!email) showError(e.target[1], "Email is required");
  else if (!emailRegex.test(email)) showError(e.target[1], "Invalid email address");

  if (!password) showError(e.target[2], "Password is required");
  else if (password.length < 8) showError(e.target[2], "Min 8 characters");

  if (confirm !== password) showError(e.target[3], "Passwords do not match");

  if (!valid) return;

  try {
    const response = await fetch("/api/auth/register", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({ name, email, password, role }),
    });

    const data = await response.json();

    if (response.ok) {
      msg.textContent = "Account created! Redirecting to login...";
      msg.classList.add("status-success");

      setTimeout(() => {
        window.location.href = "/login";
      }, 700);
    } 
    else {
      msg.textContent = data.message || "Registration failed";
      msg.classList.add("status-error");
    }

  } catch (err) {
    msg.textContent = "Server error — try again later.";
    msg.classList.add("status-error");
  }
});
</script>

</body>
</html>
